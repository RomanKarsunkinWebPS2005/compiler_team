    <PackageReference Include="xunit" Version="2.9.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Parser\Parser.csproj" />
    <ProjectReference Include="..\..\src\Execution\Execution.csproj" />
    <ProjectReference Include="..\..\src\Ast\Ast.csproj" />
  </ItemGroup>

</Project>
